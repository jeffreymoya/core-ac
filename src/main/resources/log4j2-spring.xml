<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="INFO">
    <Properties>
        <Property name="console_pattern">%highlight{%d{yyyy-MM-dd'T'HH:mm:ss.SSS'Z'} [%t] %highlight([%.-5level]) %-50logger{36} : %msg%n}</Property>
        <Property name="message_pattern">%msg%n</Property>
        <Property name="bootstrap_servers">kafka:9092</Property>
        <Property name="log_path">${spring:p8c.logs.path.local}</Property>
    </Properties>
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="${console_pattern}"/>
        </Console>

        <Kafka name="KAFKA_LOGS_ATTRIBUTES" topic="logs-attributes">
            <PatternLayout pattern="${message_pattern}"/>
            <Property name="bootstrap.servers">${bootstrap_servers}</Property>
            <MarkerFilter marker="logs-attributes" onMatch="ACCEPT" onMismatch="DENY"/>
        </Kafka>

        <Kafka name="KAFKA_LOGS_RELATIONSHIPS" topic="logs-relationships">
            <PatternLayout pattern="${message_pattern}"/>
            <Property name="bootstrap.servers">${bootstrap_servers}</Property>
            <MarkerFilter marker="logs-relationships" onMatch="ACCEPT" onMismatch="DENY"/>
        </Kafka>

        <SpringProfile name="default">
            <RollingFile name="FILE_KAFKA_LOGS_ATTRIBUTES" fileName="${log_path}/attributes/LOGS_ATTRIBUTES.log"
                         filePattern="${log_path}/attributes/archived/LOGS_ATTRIBUTES-%d{yyyy-MM-dd}.log">
                <PatternLayout pattern="${message_pattern}"/>
                <Policies>
                    <TimeBasedTriggeringPolicy/>
                    <SizeBasedTriggeringPolicy size="10 MB"/>
                </Policies>
                <DefaultRolloverStrategy max="10"/>
                <MarkerFilter marker="logs-attributes" onMatch="ACCEPT" onMismatch="DENY"/>
            </RollingFile>
            <RollingFile name="FILE_KAFKA_LOGS_RELATIONSHIPS" fileName="${log_path}/relationships/LOGS_RELATIONSHIPS.log"
                         filePattern="${log_path}/relationships/archived/LOGS_RELATIONSHIPS-%d{yyyy-MM-dd}.log">
                <PatternLayout pattern="${message_pattern}"/>
                <Policies>
                    <TimeBasedTriggeringPolicy/>
                    <SizeBasedTriggeringPolicy size="10 MB"/>
                </Policies>
                <DefaultRolloverStrategy max="10"/>
                <MarkerFilter marker="logs-relationships" onMatch="ACCEPT" onMismatch="DENY"/>
            </RollingFile>
        </SpringProfile>

        <RollingFile name="FILE_LOGS_APP" fileName="logs/app.log"
                     filePattern="logs/$${date:yyyy-MM}/app-%d{yyyy-MM-dd-HH}-%i.log.gz">
            <PatternLayout>
                <Pattern>%d %p %c{1.} [%t] %m%n</Pattern>
            </PatternLayout>
            <Policies>
                <TimeBasedTriggeringPolicy interval="2" modulate="true"/>
                <SizeBasedTriggeringPolicy size="250 MB"/>
            </Policies>
        </RollingFile>

        <Async name="Async">
            <AppenderRef ref="KAFKA_LOGS_ATTRIBUTES"/>
            <AppenderRef ref="KAFKA_LOGS_RELATIONSHIPS"/>
            <AppenderRef ref="FILE_KAFKA_LOGS_ATTRIBUTES"/>
            <AppenderRef ref="FILE_KAFKA_LOGS_RELATIONSHIPS"/>
        </Async>
    </Appenders>

    <Loggers>
        <Logger name="com.synpulse8.pulse8.core.accesscontrolsvc.kafka.aspect.ControllerAuditAspect" level="INFO" additivity="false">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="KAFKA_LOGS_ATTRIBUTES"/>
            <AppenderRef ref="KAFKA_LOGS_RELATIONSHIPS"/>
            <SpringProfile name="default">
                <AppenderRef ref="FILE_KAFKA_LOGS_ATTRIBUTES"/>
                <AppenderRef ref="FILE_KAFKA_LOGS_RELATIONSHIPS"/>
            </SpringProfile>
        </Logger>

        <Root level="INFO">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="FILE_LOGS_APP"/>
        </Root>
    </Loggers>
</Configuration>
