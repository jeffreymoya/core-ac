<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="INFO">
    <Properties>
        <Property name="pattern">%highlight{%d{yyyy-MM-dd'T'HH:mm:ss.SSS'Z'} [%t] %highlight([%.-5level]) %-50logger{36} : %msg%n}</Property>
        <Property name="bootstrap.servers">kafka:9092</Property>
    </Properties>
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="${pattern}"/>
        </Console>

        <Kafka name="KAFKA_LOGS_ATTRIBUTES" topic="logs-attributes">
            <PatternLayout pattern="${pattern}"/>
            <Property name="bootstrap.servers">${bootstrap.servers}</Property>
            <MarkerFilter marker="logs-attributes" onMatch="ACCEPT" onMismatch="DENY"/>
        </Kafka>

        <Async name="Async">
            <AppenderRef ref="KAFKA_LOGS_ATTRIBUTES"/>
        </Async>
    </Appenders>

    <Loggers>
        <Logger name="com.synpulse8.pulse8.core.accesscontrolsvc.kafka.aspect.ControllerAuditAspect" level="INFO" additivity="false">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="KAFKA_LOGS_ATTRIBUTES"/>
        </Logger>

        <Root level="INFO">
            <AppenderRef ref="Console"/>
        </Root>
    </Loggers>
</Configuration>
