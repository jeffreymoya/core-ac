<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="INFO">
    <Properties>
        <Property name="console_pattern">%highlight{%d{yyyy-MM-dd'T'HH:mm:ss.SSS'Z'} [%t] %highlight([%.-5level]) %-50logger{36} : %msg%n}</Property>
        <Property name="message_pattern">%msg%n</Property>
        <Property name="bootstrap_servers">${sys:spring.kafka.bootstrap-servers}</Property>
        <Property name="log_path">c:/logs</Property>
    </Properties>
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="${console_pattern}"/>
        </Console>

        <Kafka name="KAFKA_LOGS_ATTRIBUTES" topic="logs-attributes" ignoreExceptions="false">
            <PatternLayout pattern="${message_pattern}"/>
            <Property name="bootstrap.servers">${bootstrap_servers}</Property>
            <Property name="key.serializer">org.apache.kafka.common.serialization.StringSerializer</Property>
            <Property name="value.serializer">org.apache.kafka.common.serialization.StringSerializer</Property>
            <MarkerFilter marker="logs-attributes" onMatch="ACCEPT" onMismatch="DENY"/>
        </Kafka>

        <RollingFile name="FILE_KAFKA_LOGS_ATTRIBUTES" fileName="${log_path}/attributes/LOGS_ATTRIBUTES.log"
                     filePattern="${log_path}/attributes/archived/LOGS_ATTRIBUTES-%d{yyyy-MM-dd}.log">
            <PatternLayout pattern="${message_pattern}"/>
            <Policies>
                <TimeBasedTriggeringPolicy/>
                <SizeBasedTriggeringPolicy size="10 MB"/>
            </Policies>
            <DefaultRolloverStrategy max="10"/>
            <MarkerFilter marker="logs-attributes" onMatch="ACCEPT" onMismatch="DENY"/>
        </RollingFile>

        <Async name="Async">
            <AppenderRef ref="KAFKA_LOGS_ATTRIBUTES"/>
            <AppenderRef ref="FILE_KAFKA_LOGS_ATTRIBUTES"/>
        </Async>
    </Appenders>

    <Loggers>
        <Logger name="com.synpulse8.pulse8.core.accesscontrolsvc.kafka.aspect.ControllerAuditAspect" level="INFO" additivity="false">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="KAFKA_LOGS_ATTRIBUTES"/>
            <AppenderRef ref="FILE_KAFKA_LOGS_ATTRIBUTES"/>
        </Logger>
        <Root level="WARN">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="KAFKA_LOGS_ATTRIBUTES"/>
        </Root>
    </Loggers>
</Configuration>
